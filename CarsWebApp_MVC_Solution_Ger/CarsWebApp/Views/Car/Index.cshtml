@model IEnumerable<CarsWebApp.ViewModels.CarVM>

<h4>Cars <span id="car-icons"></span></h4>
<script>
    const carIcons = '<i class="fa-solid fa-car-side"></i> '.repeat(3);
    document.getElementById('car-icons').innerHTML = carIcons;
</script>

<p>
    @Html.ActionLink("Creat new car", "Create", "Car", null, new { @class = "btn btn-primary " })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalculatedPrice)
            </th>
           
            <th>
                CarColor
            </th>
            <th><!--bar--></th>
            <th><!--actions--></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CalculatedPrice)
                </td>
                <td>
                    <div class="custom-display">
                        @item.Car.CarColorId
                        @item.Car.CarColor?.Color
                    </div>
                </td>
                <td>
                    <div style="width: 100px; height: 20px; background-color: @(item.Car.CarColor?.Color ?? "")"></div>
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCarWithOptions", new { id = item.Car.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Car.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Car.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
